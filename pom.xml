	<!-- =================== -->
	<!-- ==== Repositories === -->
	<!-- =================== -->

	<repositories>
		<repository>
			<id>io.sarl.maven</id>
			<name>SARL Repository</name>
			<url>http://maven.sarl.io/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>io.janusproject.maven</id>
			<name>Janus Repository</name>
			<url>http://maven.janusproject.io/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
